<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
	<link rel="stylesheet" type="text/css" href="/css/attendence_styles.css">
	<title>View Attendence</title>
</head>
<body>
	<%- include("navbar") -%>
<br>

	<h1>View Attendence</h1>

	<div class="container px-3">
		<div class="row gx-4">
		  <div class="col col-sm-12 col-12 col-lg-7">
			
				<div class="box col-md-6 col-sm-10">
					<form action="/teachers/view_status" method="POST">
						<br>
						<%- include("semsec") -%>
					</form>
				</div>

		  </div>
		  <% if(data!=null){ %>
		  <div class="col col-lg-4 col-md-7">
			<div class="p-3">
				<br/>
				<br/>
					<form action="/teachers/update" method="POST">
					<br />
					<input class="form-control" type="text" name="sem" value="<%= sec %>" readonly>
					<br />
					<br />
					<input class="form-control" type="text" name="date" value="<%= date %>" readonly>
				<br />
			</div>
		  </div>
		</div>
	  </div>

	
	
	<br>
	<br>
		

	<div class="tabl col-lg-10 col-md-12 col-sm-12">
		<table class="table table-bordered table-striped">
			<thead class="table-dark text-center">
				<tr>
				    <th scope="col">USN</th>
				    <th scope="col">Name</th>
				    <th scope="col">Present/Absent</th>
				</tr>
			</thead>
			<tbody class="text-center">
			<% data.forEach(function(ele){ %>
				<tr>
				    <td><%= ele.usn %></td>
				    <td><%= ele.stud_name %></td>
					<% if(ele.status==1){ %>
					<td>
						<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check-lg" viewBox="0 0 16 16">
							<path d="M12.736 3.97a.733.733 0 0 1 1.047 0c.286.289.29.756.01 1.05L7.88 12.01a.733.733 0 0 1-1.065.02L3.217 8.384a.757.757 0 0 1 0-1.06.733.733 0 0 1 1.047 0l3.052 3.093 5.4-6.425a.247.247 0 0 1 .02-.022Z"/>
						</svg>
					</td>
					<% 	} else{ %>
					<td>
						<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-x-square" viewBox="0 0 16 16">
							<path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z"/>
							<path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z"/>
						</svg>
					</td> 
					<%  } %> 
				</tr>
			<% }); %>
  			</tbody>
		</table>
		<br>
			<div class="d-grid gap-2 col-6 mx-auto" style="padding-bottom:25px;">
				<input class="btn btn-outline-info" type="submit" value="Modify">
			</div>
	</div>
	</form>
	<% } %>


<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</body>
</html>